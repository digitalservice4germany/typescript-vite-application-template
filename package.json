{
  "name": "typescript-vite-application-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preserve": "vite build",
    "serve": "vite preview",
    "clean": "rm -rf dist/",
    "test": "jest test",
    "test:e2e": "playwright test --config=test/e2e/playwright.config.ts",
    "test:a11y": "playwright test --config=test/a11y/playwright.config.ts",
    "coverage": "jest test --coverage",
    "lint:check": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow ''",
    "check": "tsc --noEmit && npm run style:check && npm test && npm run test:e2e && npm run test:a11y"
  },
  "devDependencies": {
    "@playwright-testing-library/test": "^4.5.0",
    "@playwright/test": "^1.40.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.2.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "axe-playwright": "^2.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-playwright": "^0.21.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-testing-library": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.41.0",
    "prettier": "3.2.2",
    "prettier-plugin-sh": "^0.13.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "engines": {
    "node": ">=20"
  }
}
